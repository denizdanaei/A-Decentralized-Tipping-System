{
  "manifest_version": 2,
  "name": "Decentralized Tipping",
  "version": "1.0",

  "description": "Tipping plugin based on the XRP ledger",

  "permissions": [
    "activeTab"
  ],

  "icons": {
    "48": "icons/tip_me_48",
    "96": "icons/tip_me_96",
    "128":"icons/tip_me_128"
  },
  
  "background": {
    "page": "my_ripple_experiment/background.html"
  },

  "browser_action": {
    "default_icon": "icons/tip_me_96.png",
    "default_title": "TipMe",
    "default_popup": "popup/widget.html"
  },

  "web_accessible_resources": [
    "icons/tip_me_128.png"
  ],
  "content_security_policy": "script-src 'self' https://requirejs.org/docs/release/2.3.6/minified/require.js; object-src 'self'",
  
  
  "content_scripts": [
    {
      "matches": ["http://localhost/*"],
      "js": ["my_ripple_experiment/underscore-min.js", "my_ripple_experiment/lodash.js", "my_ripple_experiment/ripple-latest.js","tipping.js"]
    }
  ]
}