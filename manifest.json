{
  "manifest_version": 2,
  "name": "Decentralized Tipping",
  "version": "1.0",

  "description": "Tipping plugin based on the XRP ledger",

  "icons": {
    "48": "icons/xrpLogo.jpg"
  },
  "content_security_policy": "script-src 'self' https://requirejs.org/docs/release/2.3.6/minified/require.js; object-src 'self'",
  
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost/*"],
      "js": ["my_ripple_experiment/underscore-min.js", "my_ripple_experiment/lodash.js", "my_ripple_experiment/ripple-latest.js","my_ripple_experiment/transaction.js", "tipping.js"]
    }
  ]
}